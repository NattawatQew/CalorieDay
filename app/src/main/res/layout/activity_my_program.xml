<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".GoalWeightActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPurple"
            android:textSize="33sp"
            android:layout_marginBottom="30dp"
            android:text="My Program" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#555555"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:text="Your daily calories intake \n should not exceed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPurple"
            android:textSize="22sp"
            android:text="...."/>
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPurple"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"
            android:text="Cal" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#555555"
        android:textSize="20sp"

        android:textAlignment="center"
        android:text="You can achieve your goal in" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="20sp"
            android:text="...."/>
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#555555"
            android:textSize="20sp"
            android:layout_marginBottom="80dp"
            android:text="days you can do this!!!" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/myprogram_continueBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.Button"
        app:elevation="5dp"
        app:backgroundTint="@color/colorPurple"
        android:layout_gravity="center_horizontal"
        android:text="@string/continueBtn" />

</androidx.appcompat.widget.LinearLayoutCompat>