<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AddOnActivity">


    <TextView
        android:text="Add On"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#2B2B2B"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="100dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#BAF0DEFF">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/breakfast" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:text="Breakfast"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/addOn_breakfast"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#00CCF8EC"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/addpic" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="100dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#BAF0DEFF">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/lunch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:text="Lunch"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/addOn_lunch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#00CCF8EC"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/addpic" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="100dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#BAF0DEFF">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/dinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:text="Dinner"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/addOn_dinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:backgroundTint="#00CCF8EC"
            android:layout_marginTop="35dp"
            android:src="@drawable/addpic" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="100dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#BAF0DEFF">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/exercise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:text="Exercise"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/addOn_exercise"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:backgroundTint="#00CCF8EC"
            android:layout_marginTop="35dp"
            android:src="@drawable/addpic" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp">

        <ImageButton
            android:id="@+id/addOn_homeBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@drawable/home_button" />
        <ImageButton
            android:id="@+id/addOn_bookBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:src="@drawable/book_button" />
        <ImageView
            android:id="@+id/addOn_addBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:src="@drawable/plus" />
        <ImageButton
            android:id="@+id/addOn_mygoalBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:src="@drawable/mountain_button" />
        <ImageButton
            android:id="@+id/addOn_profileBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:src="@drawable/profile_button" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>