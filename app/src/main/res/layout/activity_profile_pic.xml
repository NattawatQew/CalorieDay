<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ProfilePicActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPurple"
            android:textSize="33sp"
            android:layout_marginBottom="40dp"
            android:text="Profile Picture" />
    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:src="@drawable/user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="#555555"
        android:text="You can select photo from your own photo \n OR \n Use camera to take a photo"/>

    <TextView
        android:id="@+id/custom_photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Add Custom Photo"
        android:layout_marginBottom="45dp"
        android:textColor="#123456" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pic_continueBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.Button"
        app:elevation="5dp"
        app:backgroundTint="@color/colorPurple"
        android:layout_gravity="center_horizontal"
        android:text="@string/continueBtn" />

</androidx.appcompat.widget.LinearLayoutCompat>