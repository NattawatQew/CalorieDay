<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="250dp"
        android:layout_width="415dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardElevation="4dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/colorVeryLightPurple">

        <ImageButton
            android:id="@+id/home_setting"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:layout_margin="15dp"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/home_profileBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:src="@drawable/user_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="33sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"
            android:textColor="#282828"
            android:text="WELCOME BACK, "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_nameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="33sp"
            android:textColor="#282828"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="25dp"
            android:text="name "
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#C4282828"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="25dp"
            android:text="Eat the right amount of food and stay \nhydrated through the day." />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="120dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#5CF0DEFF">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="#555555"
            android:layout_marginLeft="80dp"
            android:text="Nutrition "
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="xxx Cal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=" / " />

            <TextView
                android:id="@+id/home_calData"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text=" Cal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=" Cal" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_height="30dp"
            android:layout_width="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="right"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#C1C7A8DA">

            <TextView
                android:id="@+id/home_ontrackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPurple"
                android:text="On track"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_height="120dp"
        android:layout_width="380dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#5CF0DEFF">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/water" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="#555555"
            android:layout_marginLeft="80dp"
            android:text="Water "
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=" / 8 glasses" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>

